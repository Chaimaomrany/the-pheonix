{% extends 'user-front.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <h1>Login</h1>

    <form action="{{ path('user') }}" method="post">
        <div class="form-group">
            <input placeholder="Mail adress ..." required name="_username" type="text" class="form-control">

        </div>

        <div class="form-group">
            <input placeholder="Your Password ..." required name="_password" type="password" class="form-control">

        </div>
        <button type="submit" class="btn btn-success">Connexion !</button>

    </form>
{% endblock %}
